<div class="card post-div" style="margin-bottom:3%" id="{{id}}">
    {{!-- {{#each posts}} --}}
        {{> posts posts}}
    {{!-- {{/each}} --}}
    <div id="postContent" style="display:flex; justify-content:center; align-items:center" >
      <p id="postContentText"  class="card-text" style="margin:1%" >{{posts.content}}</p>
    </div>
    {{!-- <a href="#" class="card-link">Add a comment.</a> --}}

    <div class="card-footer">
        <form class="form-inline">
          <div class="form-group mx-sm-3 mb-2" style="display:flex;" >
            <input id="newComment" class="form-control"  placeholder="Add a comment" style="margin: 1%" >
            <button id="addComment" class="btn btn-primary" style="height:35px; margin-top:1.2%" >Submit</button>
          </div>
        </form>
    </div>
    {{#if posts.mine}}
    <div class="card-footer" style="display:flex; justify-content:center;" >
      <button id="editBtn" class="btn btn-secondary" style="margin-right:1%" >Edit Post</button>
      <button id="deleteBtn" class="btn btn-danger">Delete Post</button>
    </div>
    {{/if}}
</div>

    {{#each comments}}
<div class="card  mb-3" style="width: 18rem;">
  <div class="card-footer">
    <h6 class="card-subtitle mb-2">Comment by: {{user.userName}},<br /> on: {{createdAt}}</h6>
    {{contentt}} </div>
</div>
    {{/each}}

<script src="../js/addComment.js"></script> 
<script src="../js/editDelete.js"></script> 