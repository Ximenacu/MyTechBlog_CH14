<div class="card post-div" style="width: 50%; margin-bottom:3%" id="{{id}}">
    {{!-- {{#each posts}} --}}
        {{> posts posts}}
    {{!-- {{/each}} --}}

    <p class="card-text" style="text-align:center; margin-top:2%" >{{posts.content}}</p>
    {{!-- <a href="#" class="card-link">Add a comment.</a> --}}

    <div class="card-footer">
        <form class="form-inline">
          <div class="form-group mx-sm-3 mb-2" style="display:flex;" >
            <input id="newComment" class="form-control"  placeholder="Add a comment" style="margin: 1%" >
            <button id="addComment" class="btn btn-primary" style="height:35px; margin-top:1.2%" >Submit</button>
          </div>
        </form>
    </div>
</div>

    {{#each comments}}
<div class="card  border-info mb-3" style="width: 18rem;">
  <div class="card-footer">
    <h6 class="card-subtitle mb-2">Comment by: {{user_id}},<br /> on: {{createdAt}}</h6>
    {{contentt}} </div>
</div>
    {{/each}}

<script src="../js/addComment.js"></script> 